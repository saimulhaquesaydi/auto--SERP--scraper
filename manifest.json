{
  "manifest_version": 3,
  "name": "Google URL Scraper",
  "version": "4.1",
  "description": "Automatically scrape Google search result URLs with persistent storage",
  "permissions": [
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "https://www.google.com/*",
    "https://www.google.co.in/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Google URL Scraper"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://www.google.com/*", "https://www.google.co.in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}